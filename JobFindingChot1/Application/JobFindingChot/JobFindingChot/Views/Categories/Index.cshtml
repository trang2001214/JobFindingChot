@model IEnumerable<JobFindingChot.Models.Category>

@{
    ViewData["Title"] = "Categories";
}

<div class="section-top-border col-md-10">
    <h3 class="mb-30">All Categories @Html.ActionLink("New Category", "Create", null, new { @class = "btn btn-default", @style = "float:left;" })</h3>
    <div class="progress-table-wrap">
        <div class="progress-table">
            <div class="table-head">
                <div class="serial">#</div>
                <div class="country">Categories</div>
                <div class="country">Description</div>
                <div class="country">Action</div>
            </div>

            @foreach (var item in Model)
            {
                <div class="table-row">
                    <div class="serial">01</div>
                    <div class="country"> @Html.DisplayFor(modelItem => item.CatName)</div>
                    <div class="country"> @Html.DisplayFor(modelItem => item.Description)</div>
                    <div class="visit">
                        @Html.ActionLink("Edit", "Edit", new { id = item.CatId }, new { @class = "genric-btn primary" })
                    </div>

                </div>


            }
        </div>
    </div>
</div>